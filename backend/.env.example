# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3001
API_PREFIX=/api/v1

# Database (Railway will auto-populate DATABASE_URL)
DATABASE_URL=postgresql://user:password@localhost:5432/hood_family_farms

# Authentication
JWT_SECRET=your-secure-random-string-at-least-64-characters-long
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Stripe Terminal (for POS)
STRIPE_TERMINAL_LOCATION=tml_xxxxx

# Plaid Bank Integration
PLAID_CLIENT_ID=xxxxx
PLAID_SECRET=xxxxx
PLAID_ENV=sandbox

# CORS Origins (comma-separated)
# Development defaults are auto-configured
# For production, this is handled by domain pattern matching
CORS_ORIGIN=http://localhost:3000,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3005,http://localhost:3006,http://localhost:3007,http://localhost:3008

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
